<div data-controller="notification">
  <div data-controller="dashboard" data-dashboard-notification-outlet="[data-controller='notification']">
    <div data-controller="todo">
    <!-- „Éà„Éº„Çπ„ÉàÈÄöÁü• -->
    <div data-notification-target="toast" class="fixed top-20 right-4 z-50 p-4 rounded-xl shadow-lg border-2 bg-blue-50 dark:bg-blue-900/30 border-blue-300 dark:border-blue-700 transform translate-x-full opacity-0 transition-all duration-300 ease-out">
      <div class="flex items-center gap-3">
        <span data-notification-target="toastIcon" class="text-2xl">üîî</span>
        <span data-notification-target="toastMessage" class="text-sm font-medium text-slate-700 dark:text-slate-200"></span>
        <button type="button" data-action="notification#hideToast" class="ml-2 text-slate-400 hover:text-slate-600 dark:hover:text-slate-300">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
        </button>
      </div>
    </div>
    <div class="h-[calc(100vh-64px)] overflow-hidden bg-gradient-to-br from-slate-100 via-blue-50 to-indigo-100 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 transition-colors duration-300">
      <div class="mx-auto px-6 py-6">
        <div class="flex flex-row gap-6 justify-center items-stretch mx-auto min-h-full">
          <!-- Â∑¶„Ç´„É©„É†: ÊôÇÈñìÁÆ°ÁêÜ„ÉªTodoÊ®™‰∏¶„Å≥„ÄÅ„Åù„ÅÆ‰∏ã„Å´„É°„É¢Â∏≥ -->
          <div class="flex flex-col w-full max-w-4xl min-h-full flex-1 gap-6">
            <div class="flex flex-row gap-6">
              <!-- ÊôÇÈñìÁÆ°ÁêÜ -->
              <div class="bg-white/80 dark:bg-slate-800/90 backdrop-blur-sm p-6 rounded-2xl shadow-lg dark:shadow-slate-900/50 w-1/2 border border-slate-200/50 dark:border-slate-700/50 hover:shadow-xl transition-shadow duration-300">
                <!-- Êó•‰ªò„ÉªÊôÇÂàª -->
                <div class="text-center mb-5 pb-5 border-b border-slate-200 dark:border-slate-700">
                  <p class="text-sm font-medium text-slate-500 dark:text-slate-400"><%= Time.current.in_time_zone('Asia/Tokyo').strftime('%Y/%m/%d (%A)') %></p>
                  <p class="mt-1"><span id="current-time" class="font-mono text-3xl font-bold text-indigo-600 dark:text-cyan-400" data-dashboard-target="currentTime"><%= Time.current.in_time_zone('Asia/Tokyo').strftime('%H:%M:%S') %></span></p>
                </div>

                <!-- ÁµåÈÅéÊó•Êï∞ -->
                <div class="mb-5 pb-5 border-b border-slate-200 dark:border-slate-700">
                  <form id="start-date-form" class="flex items-center justify-between mb-3" method="get">
                    <span class="text-sm font-medium text-slate-600 dark:text-slate-300"><%= t('dashboard.reference_date') %></span>
                    <input type="date" id="start-date" name="start_date" value="<%= params[:start_date].presence || HomeHelper::DEFAULT_START_DATE %>" class="border border-slate-300 dark:border-slate-600 rounded-lg px-3 py-1.5 bg-white dark:bg-slate-700 text-slate-700 dark:text-slate-100 text-sm focus:ring-2 focus:ring-indigo-500 dark:focus:ring-cyan-500 focus:border-transparent" data-dashboard-target="startDateInput" onchange="this.form.submit()">
                  </form>
                  <% elapsed = elapsed_time_from_date(params[:start_date]) %>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-slate-600 dark:text-slate-300"><%= t('dashboard.days_passed') %></span>
                    <span class="font-semibold text-indigo-600 dark:text-cyan-400"><%= elapsed[:days_passed] %><%= t('dashboard.days') %> <span class="text-slate-500 dark:text-slate-400 font-normal">(<%= elapsed[:months_passed] %><%= t('dashboard.months') %><%= elapsed[:day_of_month] %><%= t('dashboard.days') %>)</span></span>
                  </div>
                </div>

                <!-- ÊôÇÈñìÂÖ•Âäõ„ÉªË°®Á§∫ -->
                <div class="space-y-3">
                  <!-- ÈñãÂßãÊôÇÂàªÂÖ•ÂäõÔºà„Ç´„Çπ„Çø„É†„Çø„Ç§„É†„Éî„ÉÉ„Ç´„ÉºÔºâ -->
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2">
                      <div data-controller="time-picker" data-time-picker-hour-value="9" data-time-picker-minute-value="0" class="relative">
                        <!-- Ë°®Á§∫„Éú„Çø„É≥ -->
                        <button type="button" data-action="click->time-picker#toggle" class="flex items-center gap-2 px-3 py-1.5 bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg hover:border-indigo-400 dark:hover:border-cyan-500 transition-colors">
                          <span data-time-picker-target="display" class="font-mono text-sm font-semibold text-slate-700 dark:text-slate-100">09:00</span>
                          <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                        </button>
                        <input type="hidden" data-time-picker-target="hiddenInput" data-dashboard-target="timeInput" value="09:00">

                        <!-- „Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥ -->
                        <div data-time-picker-target="dropdown" class="hidden absolute right-0 mt-2 z-50 bg-white dark:bg-slate-800 rounded-xl shadow-xl border border-slate-200 dark:border-slate-700 overflow-hidden transition-all duration-150 opacity-0 scale-95">
                          <div class="flex">
                            <!-- ÊôÇÈñì„É™„Çπ„Éà -->
                            <div class="border-r border-slate-200 dark:border-slate-700">
                              <div class="px-3 py-2 text-xs font-bold text-slate-500 dark:text-slate-400 bg-slate-50 dark:bg-slate-700/50 text-center">ÊôÇ</div>
                              <div data-time-picker-target="hourList" class="h-48 overflow-y-auto w-16">
                                <% (0..23).each do |hour| %>
                                <button type="button" data-action="click->time-picker#selectHour" data-hour="<%= hour %>" class="w-full py-2 text-center text-sm font-mono hover:bg-indigo-100 dark:hover:bg-slate-600 transition-colors text-slate-700 dark:text-slate-200">
                                  <%= hour.to_s.rjust(2, '0') %>
                                </button>
                                <% end %>
                              </div>
                            </div>
                            <!-- ÂàÜ„É™„Çπ„Éà -->
                            <div>
                              <div class="px-3 py-2 text-xs font-bold text-slate-500 dark:text-slate-400 bg-slate-50 dark:bg-slate-700/50 text-center">ÂàÜ</div>
                              <div data-time-picker-target="minuteList" class="h-48 overflow-y-auto w-16">
                                <% (0..55).step(5).each do |minute| %>
                                <button type="button" data-action="click->time-picker#selectMinute" data-minute="<%= minute %>" class="w-full py-2 text-center text-sm font-mono hover:bg-indigo-100 dark:hover:bg-slate-600 transition-colors text-slate-700 dark:text-slate-200">
                                  <%= minute.to_s.rjust(2, '0') %>
                                </button>
                                <% end %>
                              </div>
                            </div>
                          </div>
                          <!-- ÁèæÂú®ÊôÇÂàª„Éú„Çø„É≥ -->
                          <div class="border-t border-slate-200 dark:border-slate-700 p-2">
                            <button type="button" data-action="click->time-picker#setNow" class="w-full py-1.5 text-xs font-semibold text-indigo-600 dark:text-cyan-400 hover:bg-indigo-50 dark:hover:bg-slate-700 rounded-lg transition-colors">
                              üïê <%= t('dashboard.current_time') %>
                            </button>
                          </div>
                        </div>
                      </div>
                      <button id="save-time" data-action="click->dashboard#saveInputTime" class="px-3 py-1.5 bg-indigo-500 dark:bg-cyan-600 text-white rounded-lg hover:bg-indigo-600 dark:hover:bg-cyan-700 transition-colors font-semibold text-xs">Save</button>
                    </div>
                  </div>

                  <!-- ÈñãÂßãÊôÇÂàª -->
                  <div class="flex items-center justify-between py-2 px-3 bg-slate-50 dark:bg-slate-700/40 rounded-lg">
                    <span class="text-sm font-medium text-slate-600 dark:text-slate-300"><%= t('dashboard.start_time') %></span>
                    <span id="starting-time" data-dashboard-target="startingTime" class="font-mono text-lg font-bold text-indigo-600 dark:text-cyan-400">--:--</span>
                  </div>

                  <!-- ÁµÇ‰∫ÜÊôÇÂàª -->
                  <div class="flex items-center justify-between py-2 px-3 bg-slate-50 dark:bg-slate-700/40 rounded-lg">
                    <span class="text-sm font-medium text-slate-600 dark:text-slate-300"><%= t('dashboard.end_time') %></span>
                    <div class="flex items-center gap-2">
                      <span id="end-time" data-dashboard-target="endTime" class="font-mono text-lg font-bold text-indigo-600 dark:text-cyan-400">--:--</span>
                      <div class="flex gap-1">
                        <button type="button" class="px-2 py-1 bg-slate-200 dark:bg-slate-600 text-slate-600 dark:text-slate-200 rounded text-xs font-medium hover:bg-slate-300 dark:hover:bg-slate-500 transition-colors" data-action="click->dashboard#add30minToEndTime">+30m</button>
                        <button type="button" class="px-2 py-1 bg-slate-200 dark:bg-slate-600 text-slate-600 dark:text-slate-200 rounded text-xs font-medium hover:bg-slate-300 dark:hover:bg-slate-500 transition-colors" data-action="click->dashboard#add1hToEndTime">+1h</button>
                        <button type="button" class="px-2 py-1 bg-rose-100 dark:bg-rose-900/50 text-rose-600 dark:text-rose-300 rounded text-xs font-medium hover:bg-rose-200 dark:hover:bg-rose-800/50 transition-colors" data-action="click->dashboard#resetEndTimeOffset"><%= t('common.reset') %></button>
                      </div>
                    </div>
                  </div>

                  <!-- Á®ºÂÉçÊôÇÈñì -->
                  <div class="flex items-center justify-between py-3 px-3 bg-emerald-50 dark:bg-emerald-900/30 rounded-lg">
                    <span class="text-sm font-medium text-slate-600 dark:text-slate-300"><%= t('dashboard.working_hours') %></span>
                    <span id="time-tracked" data-dashboard-target="timeTracked" class="font-mono text-xl font-bold text-emerald-600 dark:text-emerald-400">--:--</span>
                  </div>

                  <!-- ‰ºëÊÜ©„ÉÅ„Çß„ÉÉ„ÇØ -->
                  <div class="flex items-center justify-between py-2 px-3 bg-slate-50 dark:bg-slate-700/40 rounded-lg">
                    <span class="text-sm font-medium text-slate-600 dark:text-slate-300"><%= t('dashboard.include_break') %></span>
                    <input type="checkbox" id="break-checkbox" data-dashboard-target="breakCheckbox" data-action="change->dashboard#toggleBreakCheckbox" class="w-5 h-5 text-indigo-600 dark:text-cyan-500 rounded focus:ring-indigo-500 dark:focus:ring-cyan-500">
                  </div>

                  <!-- ÈÄöÁü•Ë®≠ÂÆö -->
                  <div class="mt-4 pt-4 border-t border-slate-200 dark:border-slate-700">
                    <div class="flex items-center justify-between py-2 px-3 bg-indigo-50 dark:bg-indigo-900/30 rounded-lg">
                      <div class="flex items-center gap-2">
                        <span class="text-lg">üîî</span>
                        <span class="text-sm font-medium text-slate-600 dark:text-slate-300"><%= t('dashboard.notification.title') %></span>
                      </div>
                      <input type="checkbox" data-notification-target="enableToggle" data-action="change->notification#toggleEnabled" checked class="w-5 h-5 text-indigo-600 dark:text-cyan-500 rounded focus:ring-indigo-500 dark:focus:ring-cyan-500">
                    </div>
                    <button type="button" data-notification-target="permissionButton" data-action="notification#requestPermission" class="mt-2 w-full py-2 px-3 text-xs font-medium text-indigo-600 dark:text-cyan-400 bg-indigo-100 dark:bg-indigo-900/50 rounded-lg hover:bg-indigo-200 dark:hover:bg-indigo-800/50 transition-colors">
                      <%= t('dashboard.notification.enable_browser') %>
                    </button>
                    <button type="button" data-action="notification#testNotification" class="mt-2 w-full py-2 px-3 text-xs font-medium text-slate-600 dark:text-slate-400 bg-slate-100 dark:bg-slate-700 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors">
                      üß™ <%= t('dashboard.notification.test') %>
                    </button>
                    <p class="mt-2 text-xs text-slate-500 dark:text-slate-400 text-center"><%= t('dashboard.notification.description') %></p>
                  </div>
                </div>
              </div>
              <!-- Todo„É™„Çπ„Éà -->
              <div class="bg-white/80 dark:bg-slate-800/90 backdrop-blur-sm p-6 rounded-2xl shadow-lg dark:shadow-slate-900/50 w-1/2 border border-slate-200/50 dark:border-slate-700/50 hover:shadow-xl transition-shadow duration-300">
                <!-- „Ç®„É©„Éº„É°„ÉÉ„Çª„Éº„Ç∏ -->
                <div data-todo-target="errorMessage" class="hidden mb-4 p-4 bg-rose-50 dark:bg-rose-900/30 border border-rose-300 dark:border-rose-700 text-rose-700 dark:text-rose-300 rounded-xl text-sm font-medium leading-relaxed">
                </div>
                <!-- „É≠„Éº„Éá„Ç£„É≥„Ç∞ -->
                <div data-todo-target="loading" class="hidden mb-4 text-center py-6">
                  <div class="inline-block animate-spin rounded-full h-8 w-8 border-3 border-indigo-600 dark:border-cyan-400 border-t-transparent"></div>
                  <span class="ml-3 text-slate-500 dark:text-slate-400 text-[15px]"><%= t('common.loading') %></span>
                </div>
                <div class="p-3 bg-gradient-to-r from-indigo-50 to-blue-50 dark:from-slate-700 dark:to-slate-700 rounded-xl">
                  <div class="flex rounded-xl overflow-hidden shadow-sm">
                    <input type="text" id="add-text" data-todo-target="inputTodo" placeholder="<%= t('dashboard.todo.placeholder') %>" class="bg-white dark:bg-slate-600 text-slate-700 dark:text-slate-100 placeholder-slate-400 dark:placeholder-slate-400 py-3.5 px-4 block w-full border-0 text-[15px] focus:ring-2 focus:ring-indigo-500 dark:focus:ring-cyan-500" data-action="keydown.enter->todo#addTodo">
                    <button id="add-button" type="button" data-action="todo#addTodo" class="py-3.5 px-6 inline-flex justify-center items-center text-sm font-bold bg-indigo-500 dark:bg-cyan-600 text-white hover:bg-indigo-600 dark:hover:bg-cyan-700 transition-colors tracking-wide">
                      <%= t('common.add') %>
                    </button>
                  </div>
                </div>
                <div class="my-5 p-5 rounded-xl w-full bg-amber-50/50 dark:bg-slate-700/50 border border-amber-200/50 dark:border-slate-600/50">
                  <p class="text-center mb-4 text-lg font-bold text-amber-700 dark:text-amber-400 tracking-wide">üìã <%= t('dashboard.todo.incomplete') %></p>
                  <ul class="incomplete-lists text-slate-700 dark:text-slate-200 space-y-2 text-[15px]" data-todo-target="incompleteLists">
                  </ul>
                </div>
                <div class="my-5 p-5 rounded-xl w-full bg-emerald-50/50 dark:bg-slate-700/50 border border-emerald-200/50 dark:border-slate-600/50">
                  <p class="text-center mb-4 text-lg font-bold text-emerald-700 dark:text-emerald-400 tracking-wide">‚úÖ <%= t('dashboard.todo.complete') %></p>
                  <ul class="complete-lists text-slate-700 dark:text-slate-200 space-y-2 text-[15px]" data-todo-target="completeLists">
                  </ul>
                </div>
              </div>
            </div>
            <!-- „É°„É¢Â∏≥ -->
            <div class="bg-white/80 dark:bg-slate-800/90 backdrop-blur-sm p-6 rounded-2xl shadow-lg dark:shadow-slate-900/50 border border-slate-200/50 dark:border-slate-700/50 hover:shadow-xl transition-shadow duration-300">
              <h2 class="text-xl font-bold mb-4 text-slate-700 dark:text-slate-100 tracking-wide">üìù <%= t('dashboard.memo.title') %></h2>
              <textarea class="w-full h-40 border border-slate-300 dark:border-slate-600 rounded-xl p-4 bg-white dark:bg-slate-700 text-slate-700 dark:text-slate-100 placeholder-slate-400 dark:placeholder-slate-400 focus:ring-2 focus:ring-indigo-500 dark:focus:ring-cyan-500 focus:border-transparent transition-all resize-none text-[15px] leading-relaxed" placeholder="<%= t('dashboard.memo.placeholder') %>"></textarea>
            </div>
          </div>
          <!-- Âè≥„Ç´„É©„É†: Qiita„Éà„É¨„É≥„Éâ -->
          <div class="w-full max-w-lg flex flex-col">
            <div class="bg-white/80 dark:bg-slate-800/90 backdrop-blur-sm p-5 rounded-2xl shadow-lg dark:shadow-slate-900/50 flex flex-col border border-slate-200/50 dark:border-slate-700/50 hover:shadow-xl transition-shadow duration-300 max-h-[calc(100vh-120px)] overflow-hidden">
              <h2 class="text-lg font-bold mb-3 text-slate-700 dark:text-slate-100 tracking-wide flex-shrink-0">üî• <%= t('dashboard.qiita_trends') %></h2>
              <ul class="space-y-1 overflow-y-auto flex-1">
                <% @qiita_trends.each do |item| %>
                <li class="py-2 px-2.5 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                  <a href="<%= item.respond_to?(:link) && item.link.respond_to?(:href) ? item.link.href : (item.respond_to?(:link) ? item.link.to_s : '') %>" target="_blank" class="text-[13px] leading-snug text-emerald-600 dark:text-emerald-400 hover:text-emerald-700 dark:hover:text-emerald-300 font-medium hover:underline decoration-1 underline-offset-2 line-clamp-2">
                    <%= item.title.respond_to?(:content) ? item.title.content : item.title.to_s %>
                  </a>
                </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>
